@model ForgotVm
@{
    Layout = null; ViewData["Title"] = "Restablecer contraseña";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container py-4" style="min-height:100vh;display:flex;align-items:center;justify-content:center;background:
    linear-gradient(rgba(255,255,255,.35),rgba(255,255,255,.35)), url('/img/login/fondo.jpg') center/cover no-repeat;">
    <div class="card shadow" style="max-width:640px;width:100%;background:rgba(255,255,255,.92)">
        <div class="card-body p-4">
            <h5 class="text-danger fw-bold">Instrucciones</h5>
            <ul class="small text-muted mb-3">
                <li>Escribe el correo electrónico asociado a tu usuario.</li>
                <li>Te enviaremos un correo con un enlace válido por 5 minutos.</li>
            </ul>

            @if (TempData["ForgotOk"] is string ok)
            {
                <div class="alert alert-success py-2">@ok</div>
            }

            <form asp-action="Forgot" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label fw-semibold">Correo electrónico</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="ejemplo@correo.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button class="btn btn-warning fw-bold">Enviar</button>
                <a class="btn btn-outline-secondary ms-2" href="/Login/Index">Volver</a>
            </form>
        </div>
    </div>
</div>
