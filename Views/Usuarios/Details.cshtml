@model PIOGHOASIS.Models.Entities.Usuario
@{
    if (ViewBag.IsPartial == true) { Layout = null; }

    var p = Model.Empleado?.Persona;
    var empleadoNombre = string.Join(" ", new[] { p?.PrimerNombre, p?.SegundoNombre, p?.PrimerApellido, p?.SegundoApellido }
                                        .Where(x => !string.IsNullOrWhiteSpace(x)));
    var empleadoLine = (Model.Empleado?.EmpleadoID != null ? (Model.Empleado.EmpleadoID + " - ") : "") + empleadoNombre;
}

<style>
    /* Mismo look&feel que Create/Edit */
    .usr-form {
        position: relative;
        margin-top: 0;
        width: 100%;
        background: linear-gradient(rgba(255,255,255,.30), rgba(255,255,255,.30)), url('/img/dashboard/FondoDashboard.jpg') center/cover no-repeat #000;
        min-height: calc(100vh - var(--header-h));
        padding: 24px;
    }

    .usr-card {
        background: rgba(255,255,255,.90);
        border: 1px solid rgba(0,0,0,.06);
        border-radius: .75rem;
        box-shadow: 0 6px 22px rgba(0,0,0,.08);
    }

    .usr-title {
        background: #f3c259;
        color: #222;
        font-weight: 800;
        font-size: 1.25rem;
        padding: .75rem 1rem;
        border-radius: .75rem .75rem 0 0;
    }

    /* Pills de estado (como en Index) */
    .pill {
        display: inline-block;
        padding: .15rem .5rem;
        border-radius: 999px;
        font-size: .84rem;
        font-weight: 700;
        vertical-align: middle
    }

    .pill-ok {
        background: #e8f7e9;
        color: #16803d;
        border: 1px solid #bfe8c2
    }

    .pill-off {
        background: #fff0f0;
        color: #b42318;
        border: 1px solid #f5c2c7
    }

    /* Avatar + cabecera */
    .usr-head .avatar {
        width: 72px;
        height: 72px;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0 4px 14px rgba(0,0,0,.12)
    }

    .usr-head .name {
        font-weight: 800;
        margin-bottom: .15rem
    }

    .usr-head .meta {
        color: #6b7280
    }

    .dt {
        font-weight: 700;
        color: #1f2a37
    }
</style>

<div class="usr-form">
    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-secondary ajax-nav" href="/Usuarios/Index" data-url="/Usuarios/Index">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>

    <div class="usr-card">
        <div class="usr-title">Detalle del Usuario</div>

        <div class="p-3 p-md-4">
            <!-- Cabecera con avatar, nombre, rol y estado -->
            <div class="row g-3 align-items-center usr-head">
                <div class="col-auto">
                    <img class="avatar" src="/Usuarios/Avatar/@Model.UsuarioID" alt="Avatar" />
                </div>
                <div class="col">
                    <h5 class="name mb-0">@Model.UsuarioNombre</h5>
                    <div class="meta small">
                        Rol: <strong>@(Model.Rol?.Nombre ?? "—")</strong>
                        &nbsp;·&nbsp;
                        Estado:
                        @if (Model.Estado)
                        {
                            <span class="pill pill-ok">Activo</span>
                        }
                        else
                        {
                            <span class="pill pill-off">Inactivo</span>
                        }
                    </div>
                </div>
            </div>

            <hr />

            <!-- Detalles (mantenemos tu estructura con <dl>) -->
            <dl class="row mb-0">
                <dt class="col-sm-3 dt">Código</dt>
                <dd class="col-sm-9">@Model.UsuarioID</dd>

                <dt class="col-sm-3 dt">Empleado</dt>
                <dd class="col-sm-9">@empleadoLine</dd>

                <dt class="col-sm-3 dt">Rol</dt>
                <dd class="col-sm-9">@((Model.Rol?.Nombre) ?? "—")</dd>

                <dt class="col-sm-3 dt">Fecha de registro</dt>
                <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <div class="mt-3">
                <a class="btn btn-primary ajax-nav" data-url="/Usuarios/Edit/@Model.UsuarioID" href="/Usuarios/Edit/@Model.UsuarioID">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a class="btn btn-outline-secondary ajax-nav ms-2" data-url="/Usuarios/Index" href="/Usuarios/Index">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
